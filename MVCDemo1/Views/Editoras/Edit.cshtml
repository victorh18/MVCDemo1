@model MVCDemo1.Editora

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm()) {

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 style="text-align: center">MODIFICAR EDITORA</h3>
        <hr />

        <div class="form-group">
            @Html.LabelFor(e => e.Editorial, new { @class="control-label"})
            @Html.EditorFor(e => e.Editorial, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div>
            <input type="submit" class="btn btn-default" value="GUARDAR"/>
        </div>
    </div>

}

