@model MVCDemo1.Editora

@{
    ViewBag.Title = "Create";
}

<!--Se declara el formulario-->
@using (Html.BeginForm())
{
    <!--Para Validar la solicitud-->
    @Html.AntiForgeryToken()

    <!--Comienzo a declarar las partes del formulario-->
    <div class="form-horizontal">
        <h3 style="text-align: center">NUEVA EDITORA</h3>
        <hr />

        <!--Grupo del nombre de la editora-->
        <div class="form-group">
            @Html.LabelFor(model => model.Editorial, new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(model => model.Editorial, new { htmlAttributes = new { @class = "form-control"} })
        </div>

        <!--Grupo del boton que envia la solicitud-->
        <div class="form-group">
            <!--Para que se ponga en le medio del formulario-->
            <div class="col-md-offset-2">
                <input type="submit" value="CREAR" class="btn btn-default" />
            </div>

        </div>
    </div>
}
